---
/**
 * Generic BaseLayout for BlogLabs.
 * Provides minimal HTML structure, metadata, and a slot for content.
 * No theme-specific logic, fonts, or scripts.
 *
 * Props:
 * - title: string (required)
 * - description?: string (optional)
 * - ogImage?: string (optional)
 */
interface Props {
    title: string;
    description?: string;
    ogImage?: string;
}
const {
    title,
    description = "BlogLabs - A modern blog platform.",
    ogImage,
} = Astro.props;
import '../styles/global.css';
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{title}</title>
        <meta name="description" content={description} />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:type" content="website" />
        <meta property="og:url" content={Astro.url.href} />
        {ogImage && <meta property="og:image" content={ogImage} />}
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link
            rel="stylesheet"
            href="https://unpkg.com/prismjs@1.29.0/themes/prism-okaidia.css"
        />
    </head>
    <body>
        <slot />
    </body>
</html>
